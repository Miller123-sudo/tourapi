extends base

block content
    .login-container
        .login-card
            .login-card_header Log into your account

            form.login-card_body 
                .form_group 
                    label.form_label(for='email') Email address
                    input#email.form_input(type="email", placeholder="you@example.com", required)
                .form_group
                    label.form_label(for='password') Password
                    input#password.form_input(type="password", placeholder="........", required)

                .form_group
                    a.login_button Login
                form.forgot-password
                    input#forgot-password-email.form_input(type="email", placeholder="you@example.com", required)
                    button.forgot-pass-btn Forgot Pass 